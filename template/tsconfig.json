{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "DOM.Iterable",
            "DOM",
            "ESNext",
            "ESNext.Array",
            "ES2019.Array"
        ],
        "allowJs": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "downlevelIteration": true,
        "jsx": "preserve",
        "incremental": true,
        "module": "ES2020",
        "rootDir": "./",
        "moduleResolution": "node",
        // "baseUrl": "./src",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
